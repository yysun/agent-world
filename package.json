{
  "name": "agent-world",
  "version": "0.8.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "workspaces": [
    "core",
    "tui",
    "web",
    "ws"
  ],
  "bin": {
    "agent-world": "dist/cli/index.js",
    "agent-world-server": "dist/server/index.js"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/server/index.js",
    "dev": "npm-run-all --parallel server:watch web:dev",
    "cli": "npm run cli:start",
    "cli:start": "node dist/cli/index.js",
    "cli:dev": "npx tsx cli/index.ts",
    "cli:watch": "npx tsx --watch cli/index.ts",
    "tui": "npm run tui:start",
    "tui:start": "npm run start --workspace=tui",
    "tui:dev": "npm-run-all --sequential ws:wait tui:dev:direct",
    "tui:dev:direct": "npx tsx tui/src/index.tsx",
    "tui:watch": "npx tsx --watch tui/src/index.tsx",
    "ws": "npm run ws:start",
    "ws:start": "node dist/ws/index.js",
    "ws:dev": "npx tsx ws/index.ts",
    "ws:watch": "npx tsx --watch ws/index.ts",
    "ws:wait": "wait-on tcp:3001",
    "server": "npm run server:start",
    "server:start": "node dist/server/index.js",
    "server:dev": "npx tsx server/index.ts",
    "server:watch": "npx tsx --watch server/index.ts",
    "server:wait": "wait-on http://127.0.0.1:3000/health",
    "web:dev": "npm-run-all --sequential server:wait web:dev:direct",
    "web:dev:direct": "npm run dev --workspace=web",
    "web:watch": "npm-run-all --parallel server:watch web:dev:direct",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "npx tsx tests/db/migration-tests.ts",
    "integration": "vitest run --config vitest.integration.config.ts",
    "check": "tsc --noEmit --project tsconfig.build.json && npm run check --workspace=core && npm run check --workspace=ws && npm run check --workspace=tui && npm run check --workspace=web && npm run check --workspace=cli",
    "build": "npm run build --workspace=core && tsc --project tsconfig.build.json && npm run build --workspace=ws && npm run build --workspace=web",
    "pkill": "pkill -f tsx"
  },
  "description": "World-mediated agent management system with clean API surface",
  "keywords": [
    "agents",
    "ai",
    "llm",
    "world",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.5.0",
    "cors": "^2.8.5",
    "enquirer": "^2.4.1",
    "express": "^4.21.2",
    "tsx": "^4.20.3",
    "open": "^10.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "commander": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}