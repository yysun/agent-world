{
  "name": "agent-world",
  "version": "0.4.6",
  "main": "index.ts",
  "type": "module",
  "workspaces": [
    "core",
    "next"
  ],
  "bin": {
    "agent-world": "dist/cli/index.js",
    "agent-world-server": "dist/server/index.js"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/server/index.js",
    "cli": "npx tsx cli/index.ts",
    "server": "npx tsx server/index.ts",
    "dev-web": "concurrently \"npm run server\" \"cd web && npm run dev\"",
    "test": "jest --config jest.config.js",
    "check": "tsc --noEmit",
    "build": "tsc && cd web && npm run build",
    "pkill": "pkill -f tsx",
    "dev": "cd next && npm run dev"
  },
  "description": "World-mediated agent management system with clean API surface",
  "keywords": [
    "agents",
    "ai",
    "llm",
    "world",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "exports": {
    ".": "./index.ts",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/azure": "^1.3.23",
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/openai-compatible": "^0.2.14",
    "@ai-sdk/xai": "^1.2.16",
    "@types/terminal-kit": "^2.5.7",
    "ai": "^4.3.16",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "enquirer": "^2.4.1",
    "events": "^3.3.0",
    "express": "^4.21.2",
    "nanoid": "^5.1.5",
    "ollama-ai-provider": "^1.2.0",
    "open": "^10.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sqlite3": "^5.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/pino": "^7.0.4",
    "@types/sqlite3": "^3.1.11",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "commander": "^14.0.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.21.5",
    "jest": "^29.5.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "tmp": "^0.2.0",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
