{
  "name": "agent-world",
  "version": "0.10.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "workspaces": [
    "core",
    "web"
  ],
  "bin": {
    "agent-world": "scripts/launch-electron.js",
    "agent-world-cli": "dist/cli/index.js",
    "agent-world-server": "dist/server/index.js"
  },
  "scripts": {
    "dev": "npm run dev:electron",
    "dev:web": "npm-run-all --parallel server:watch web:vite",
    "dev:cli": "npx tsx --watch cli/index.ts",
    "dev:electron": "npm-run-all --sequential build:core electron:vite",
    "start": "npm run start:electron",
    "start:web": "npm run build && npm run server:start",
    "start:cli": "npm run build && node dist/cli/index.js",
    "start:electron": "npm run build:core && npm run start --prefix electron",
    "build": "npm run build --workspace=core && tsc --project tsconfig.build.json && npm run build --workspace=web",
    "build:core": "npm run build --workspace=core",
    "check": "tsc --noEmit --project tsconfig.build.json && npm run check --workspace=core && npm run check --workspace=web",
    "server:dev": "npx tsx server/index.ts",
    "server:watch": "npx tsx --watch server/index.ts",
    "server:start": "node dist/server/index.js",
    "web:vite": "npm run dev --workspace=web",
    "electron:vite": "npm run dev --prefix electron",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "npx tsx tests/db/migration-tests.ts",
    "test:e2e": "npx tsx tests/e2e/test-agent-response-rules.ts",
    "test:e2e:interactive": "npx tsx tests/e2e/test-agent-response-rules.ts -i",
    "integration": "vitest run --config vitest.integration.config.ts",
    "pkill": "pkill -f tsx"
  },
  "description": "World-mediated agent management system with clean API surface",
  "keywords": [
    "agents",
    "ai",
    "llm",
    "world",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.5.0",
    "cors": "^2.8.5",
    "enquirer": "^2.4.1",
    "express": "^4.22.1",
    "open": "^11.0.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/spy": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "chai": "^6.2.1",
    "commander": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tinyspy": "^4.0.4",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}