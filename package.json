{
  "name": "agent-world",
  "version": "0.12.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "workspaces": [
    "core",
    "web"
  ],
  "bin": {
    "agent-world": "bin/agent-world.js",
    "agent-world-cli": "bin/agent-world-cli.js",
    "agent-world-server": "bin/agent-world-server.js"
  },
  "scripts": {
    "dev": "npm run web:dev",
    "dev:reset": "for p in 3000 8080; do pids=$(lsof -tiTCP:$p -sTCP:LISTEN 2>/dev/null || true); if [ -n \"$pids\" ]; then kill $pids; fi; done",
    "version:sync:electron": "node scripts/sync-electron-version.js",
    "version:check:electron": "node scripts/sync-electron-version.js --check",
    "release:prepare": "npm run version:sync:electron && npm run version:check:electron",
    "web:dev": "npm-run-all --parallel server:watch web:vite:wait",
    "cli:dev": "npx tsx --watch cli/index.ts",
    "electron:dev": "npm-run-all --sequential build:core electron:dev:watch",
    "electron:dev:watch": "npm-run-all --parallel build:core:watch electron:vite",
    "electron:package:base": "npm run release:prepare && npm run package:base --prefix electron",
    "electron:dist:dir": "npm run release:prepare && npm run dist:dir --prefix electron",
    "electron:dist:mac": "npm run release:prepare && npm run dist:mac --prefix electron",
    "electron:dist:win": "npm run release:prepare && npm run dist:win --prefix electron",
    "electron:dist:win:arm64": "npm run release:prepare && npm run dist:win:arm64 --prefix electron",
    "electron:dist:all": "npm run release:prepare && npm run dist:all --prefix electron",
    "start": "npm run web:start",
    "web:start": "npm run build && npm run server:start",
    "cli:start": "npm run build && node dist/cli/index.js",
    "electron:start": "npm run build:core && npm run start --prefix electron",
    "build": "npm run build --workspace=core && tsc --project tsconfig.build.json && npm run build --workspace=web",
    "build:core": "npm run build --workspace=core",
    "build:core:watch": "npm run build --workspace=core -- --watch --preserveWatchOutput",
    "check": "tsc --noEmit --project tsconfig.build.json && npm run check --workspace=core && npm run check --workspace=web && npm run main:build --prefix electron",
    "server:dev": "npx tsx server/index.ts",
    "server:watch": "npx tsx --watch server/index.ts",
    "server:start": "node dist/server/index.js",
    "web:vite": "npm run dev --workspace=web",
    "web:vite:wait": "wait-on tcp:127.0.0.1:3000 && npm run web:vite",
    "electron:vite": "npm run dev --prefix electron",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "npx tsx tests/db/migration-tests.ts",
    "test:e2e": "npx tsx tests/e2e/test-agent-response-rules.ts",
    "test:e2e:interactive": "npx tsx tests/e2e/test-agent-response-rules.ts -i",
    "integration": "vitest run --config vitest.integration.config.ts",
    "pkill": "pkill -f tsx"
  },
  "description": "World-mediated agent management system with clean API surface",
  "keywords": [
    "agents",
    "ai",
    "llm",
    "world",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "enquirer": "^2.4.1",
    "express": "^4.22.1",
    "events": "^3.3.0",
    "fast-glob": "^3.3.3",
    "nanoid": "^5.1.5",
    "open": "^11.0.0",
    "openai": "^6.15.0",
    "commander": "^14.0.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.3",
    "sqlite3": "^5.1.7",
    "zod": "^4.2.1",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/spy": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "chai": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tinyspy": "^4.0.4",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
